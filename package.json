{
  "name": "bangbang",
  "displayName": "BangBang",
  "description": "Task management protocol for AI-assisted development",
  "version": "0.1.0",
  "publisher": "bangbang",
  "repository": {
    "type": "git",
    "url": "https://github.com/1broseidon/bangbang"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/.bangbang.md"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bangbang.refresh",
        "title": "BangBang: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "bangbang.createBoard",
        "title": "BangBang: Create Board",
        "icon": "$(add)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bangbang-sidebar",
          "title": "BangBang",
          "icon": "$(checklist)"
        }
      ]
    },
    "views": {
      "bangbang-sidebar": [
        {
          "type": "webview",
          "id": "bangbang.tasksView",
          "name": "Tasks",
          "contextualTitle": "BangBang Tasks"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "@vscode/vsce": "^3.7.0",
    "eslint": "^8.x",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@types/marked": "^5.0.2",
    "js-yaml": "^4.1.0",
    "marked": "^17.0.0"
  }
}
